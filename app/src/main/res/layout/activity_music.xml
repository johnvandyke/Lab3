*************************************
* The activity_music.xml layout file contains ImageView and Button widgets.  The ImageView widgets
* display images that are stored in the drawables folder.  The Button widgets are used to play and
* pause music that is stored in the raw folder.  The functionality of the button is in the
* MusicActivity.java file.
*************************************
-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewCardinals"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/imgCardinals"
        android:src="@drawable/cardinalsimg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPlayCardinals"
        android:id="@+id/buttonPlayCardinals"
        android:layout_below="@+id/imageViewCardinals"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewCigarettesAndSaints"
        android:layout_below="@+id/buttonPlayCardinals"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:contentDescription="@string/imgCigarettesAndSaints"
        android:src="@drawable/cigarettesandsaintsimg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPlayCigarettesAndSaints"
        android:id="@+id/buttonPlayCigarettesAndSaints"
        android:layout_below="@+id/imageViewCigarettesAndSaints"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
